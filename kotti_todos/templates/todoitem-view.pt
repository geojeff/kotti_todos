<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="todoitem-view content todoitems">

    <div class="todoitem" data-uri="${api.url(context)}">
      <h1>${api.context.title}</h1>
      <ul tal:switch="api.context.done">
        <li>Status:</li>
        <li tal:case="True">
          <i class="icon-check"> Done
        </li>
        <li tal:case="False">
          <i class="icon-exclamation-sign"> Not Done
        </li>
      </ul>
      <p class="description">
        ${api.context.description}
      </p>
      <p class="body">
        ${structure: api.context.body}
      </p>
    </div>

  </article>

</html>
